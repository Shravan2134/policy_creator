{
    "properties": {
      "displayName": "Deny Publicly Exposed Serverless With High Privileges",
      "policyType": "Custom",
      "mode": "All",
      "description": "This policy denies serverless workloads that are publicly exposed, have high privileges, and allow unauthenticated invocation.",
      "metadata": {
        "category": "Security"
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Web/sites"
            },
            {
              "field": "Microsoft.Network/publicIpAddresses",
              "exists": "true"
            },
            {
              "field": "Microsoft.Security/securityConfigurations.highPrivilegeAccess",
              "equals": "true"
            },
            {
              "field": "Microsoft.Web/sites.authSettings.unauthenticatedAccess",
              "equals": "true"
            }
          ]
        },
        "then": {
          "effect": "Deny"
        }
      }
    }
  }
  