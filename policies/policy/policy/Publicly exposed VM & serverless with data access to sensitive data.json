{
    "properties": {
      "displayName": "Deny Publicly Exposed VM/Serverless With Sensitive Data Access",
      "policyType": "Custom",
      "mode": "All",
      "description": "This policy denies VM and serverless workloads that are publicly exposed and have access to sensitive data.",
      "metadata": {
        "category": "Security"
      },
      "parameters": {
        "effect": {
          "type": "String",
          "defaultValue": "Deny",
          "allowedValues": ["Audit", "Deny", "Disabled"],
          "metadata": {
            "displayName": "Effect",
            "description": "The effect determines what happens when the policy rule is evaluated to match."
          }
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "in": [
                "Microsoft.Compute/virtualMachines",
                "Microsoft.Web/sites"
              ]
            },
            {
              "field": "Microsoft.Network/publicIpAddresses",
              "exists": "true"
            },
            {
              "field": "Microsoft.Security/securityConfigurations.sensitiveDataAccess",
              "equals": "true"
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }
  }
  