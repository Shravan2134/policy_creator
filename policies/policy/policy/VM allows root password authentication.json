{
    "properties": {
      "displayName": "Deny VM Allowing Root Password Authentication",
      "policyType": "Custom",
      "mode": "All",
      "description": "This policy denies VM instances that allow root login via password authentication.",
      "metadata": {
        "category": "Security"
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Compute/virtualMachines"
            },
            {
              "field": "Microsoft.Compute/virtualMachines.osProfile.linuxConfiguration.ssh.rootPasswordAuthentication",
              "equals": "true"
            }
          ]
        },
        "then": {
          "effect": "Deny"
        }
      }
    }
  }
  