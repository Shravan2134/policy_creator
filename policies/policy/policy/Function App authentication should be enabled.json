{
  "properties": {
    "displayName": "Function App authentication should be enabled",
    "policyType": "BuiltIn",
    "mode": "All",
    "description": "Deny creation or update of Function App resources if authentication is not enabled.",
    "metadata": {
      "version": "1.0.0",
      "category": "Function App"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "kind",
            "contains": "functionapp"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Web/sites/authentication.enabled",
                "notEquals": true
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}