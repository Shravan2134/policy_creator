{
    "properties": {
      "displayName": "Deny GKE Cluster-Admin Role Usage",
      "policyType": "Custom",
      "mode": "All",
      "description": "This policy denies accounts from being assigned the cluster-admin role in GKE.",
      "metadata": {
        "category": "Security"
      },
      "parameters": {
        "effect": {
          "type": "String",
          "defaultValue": "Deny",
          "allowedValues": ["Audit", "Deny", "Disabled"],
          "metadata": {
            "displayName": "Effect",
            "description": "The effect determines what happens when the policy rule is evaluated to match."
          }
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Google.KubernetesEngine/ClusterRoleBinding"
            },
            {
              "field": "Google.KubernetesEngine/ClusterRoleBinding.roleRef.name",
              "equals": "cluster-admin"
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }
  }
  