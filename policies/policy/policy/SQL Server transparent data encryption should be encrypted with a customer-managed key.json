{
    "properties": {
      "displayName": "Deny SQL Server Without Customer-Managed Key Encryption",
      "policyType": "BuiltIn",
      "mode": "Indexed",
      "description": "This policy denies SQL Server instances that do not have Transparent Data Encryption (TDE) configured with a customer-managed key.",
      "metadata": {
        "category": "SQL Security"
      },
      "parameters": {},
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Sql/servers"
            },
            {
              "field": "Microsoft.Sql/servers/encryptionProtector.serverKeyType",
              "notEquals": "AzureKeyVault"
            }
          ]
        },
        "then": {
          "effect": "deny"
        }
      }
    }
  }
  