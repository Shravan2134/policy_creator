{
  "properties": {
    "displayName": "App Service Microsoft Entra ID (AAD) should be enabled",
    "policyType": "BuiltIn",
    "mode": "All",
    "description": "Deny creation or update of App Service resources if Microsoft Entra ID (AAD) authentication is not enabled.",
    "metadata": {
      "version": "1.0.0",
      "category": "App Service"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Web/sites/authentication.enabled",
                "notEquals": true
              },
              {
                "field": "Microsoft.Web/sites/authentication/identityProviders/aad/enabled",
                "notEquals": true
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}