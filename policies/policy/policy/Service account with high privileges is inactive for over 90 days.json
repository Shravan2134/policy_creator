{
    "properties": {
      "displayName": "Deny Inactive High-Privilege Service Accounts",
      "policyType": "Custom",
      "mode": "All",
      "description": "This policy denies service accounts with high privileges that have been inactive for over 90 days.",
      "metadata": {
        "category": "Security Compliance"
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Entra/serviceAccounts"
            },
            {
              "field": "Microsoft.Entra/serviceAccounts.lastSignInDateTime",
              "less": "[addDays(utcNow(), -90)]"
            },
            {
              "field": "Microsoft.Entra/serviceAccounts.role",
              "in": [
                "Global Administrator",
                "Privileged Role Administrator",
                "Security Administrator"
              ]
            }
          ]
        },
        "then": {
          "effect": "Deny"
        }
      }
    }
  }
  