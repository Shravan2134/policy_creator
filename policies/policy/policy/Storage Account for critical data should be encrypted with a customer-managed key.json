{
    "properties": {
      "displayName": "Deny Storage Account Without Customer-Managed Key Encryption",
      "policyType": "BuiltIn",
      "mode": "Indexed",
      "description": "This policy denies Storage Account instances that do not have encryption configured with a customer-managed key.",
      "metadata": {
        "category": "Storage Security"
      },
      "parameters": {},
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Storage/storageAccounts"
            },
            {
              "field": "Microsoft.Storage/storageAccounts.encryption.keySource",
              "notEquals": "Microsoft.Keyvault"
            }
          ]
        },
        "then": {
          "effect": "deny"
        }
      }
    }
  }
  