{
    "properties": {
      "displayName": "Deny Application Gateway Without WAF in Prevention Mode",
      "policyType": "Custom",
      "mode": "All",
      "description": "This policy denies Application Gateway instances that do not have Web Application Firewall (WAF) enabled in Prevention mode.",
      "metadata": {
        "category": "Application Gateway Security"
      },
      "parameters": {},
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Network/applicationGateways"
            },
            {
              "field": "Microsoft.Network/applicationGateways.webApplicationFirewallConfiguration.firewallMode",
              "equals": "Detection"
            }
          ]
        },
        "then": {
          "effect": "deny"
        }
      }
    }
  }
  