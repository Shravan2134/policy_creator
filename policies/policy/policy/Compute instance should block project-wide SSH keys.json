{
  "properties": {
    "displayName": "Compute instance should block project-wide SSH keys",
    "policyType": "BuiltIn",
    "mode": "All",
    "description": "Deny creation or update of Compute instances if project-wide SSH keys are not blocked.",
    "metadata": {
      "version": "1.0.0",
      "category": "Virtual Machine"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "field": "Microsoft.Compute/virtualMachines/osProfile.linuxConfiguration.disablePasswordAuthentication",
            "notEquals": true
          },
          {
            "field": "Microsoft.Compute/virtualMachines/osProfile.linuxConfiguration.ssh.publicKeys[*].keyData",
            "exists": true
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}