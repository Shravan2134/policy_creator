{
  "properties": {
    "displayName": "App Service should use the latest HTTP version",
    "policyType": "BuiltIn",
    "mode": "All",
    "description": "Deny creation or update of App Service resources if the latest HTTP version is not used.",
    "metadata": {
      "version": "1.0.0",
      "category": "App Service"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "Microsoft.Web/sites/siteConfig.http20Enabled",
            "notEquals": true
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}