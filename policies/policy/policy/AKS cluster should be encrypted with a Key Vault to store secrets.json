{
    "properties": {
      "displayName": "Deny AKS Clusters without Key Vault Encryption",
      "policyType": "Custom",
      "mode": "All",
      "description": "This policy denies AKS clusters that do not use Azure Key Vault for secret encryption.",
      "metadata": {
        "category": "Kubernetes Security"
      },
      "parameters": {},
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.ContainerService/managedClusters"
            },
            {
              "field": "Microsoft.ContainerService/managedClusters.securityProfile.kmsKeyVault",
              "exists": "false"
            }
          ]
        },
        "then": {
          "effect": "deny"
        }
      }
    }
  }
  