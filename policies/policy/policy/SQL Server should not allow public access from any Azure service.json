{
    "properties": {
      "displayName": "Deny SQL Server With Public Network Access",
      "policyType": "BuiltIn",
      "mode": "Indexed",
      "description": "This policy denies SQL Server instances that allow public network access.",
      "metadata": {
        "category": "SQL Security"
      },
      "parameters": {},
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Sql/servers"
            },
            {
              "field": "Microsoft.Sql/servers.publicNetworkAccess",
              "equals": "Enabled"
            }
          ]
        },
        "then": {
          "effect": "deny"
        }
      }
    }
  }
  