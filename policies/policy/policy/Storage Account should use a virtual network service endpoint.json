{
  "properties": {
    "displayName": "Storage Account should use a virtual network service endpoint",
    "policyType": "BuiltIn",
    "mode": "All",
    "description": "Deny creation or update of Storage Accounts if a virtual network service endpoint is not configured.",
    "metadata": {
      "version": "1.0.0",
      "category": "Storage"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "field": "Microsoft.Storage/storageAccounts/networkAcls.virtualNetworkRules[*].id",
            "exists": false
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}